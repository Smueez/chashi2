<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgevw"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/vec_gallery_item_empty" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/initInfo"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:text="আপনি শুধুমাত্র ছবি তুলেই ফসলের রোগ নির্নয় করতে পারবেন। সেই সাথে রোগের বর্ননা  ও তার প্রতিকারও জানতে পারবেন।"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/loadingInfo"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="35dp"
            android:layout_height="35dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="কাজ হচ্ছে"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/noDiseaseFoundInfo"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_check_circle_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="সুখবর! \nকোনো রোগ পাওয়া যায় নি!"
            android:textColor="@color/tint"
            android:textSize="17sp"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/diseaseFoundInfo"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:gravity="center"
            android:text="রোগা পাওয়া গিয়েছে"
            android:textColor="@color/reddish"
            android:textSize="17sp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="রোগের নামঃ "
            android:textColor="@color/reddish"
            android:textSize="17sp"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diseaseName"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="সামথিং একটা নাম"
            android:textColor="@color/reddish"
            android:textSize="17sp"
            android:textStyle="bold" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_btn_red_trq"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:id="@+id/moreInfoButton"
            android:text="বিস্তারিত জানতে এখানে চাপুন"/>
    </LinearLayout>


    <Button
        android:layout_width="250dp"
        android:id="@+id/btnOpenGallery"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_camera"
        android:background="@drawable/rounded_btn_trq"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_gravity="center_horizontal"
        android:text="গ্যালারি থেকে ছবি বাছুন"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnOpenCamera"
        android:background="@drawable/rounded_btn_trq"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:drawableLeft="@drawable/ic_image"
        android:layout_gravity="center_horizontal"
        android:text="ক্যামেরা থেকে ছবি বাছুন"/>
</LinearLayout>